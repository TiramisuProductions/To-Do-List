<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newuserformlayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:background="@color/bg2"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/Detailstext"
        android:padding="20dp"
        android:text="Your Details"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/namelayout"
        android:paddingTop="20dp"

        android:layout_below="@+id/Detailstext"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_margin="10dp"
        android:textColorHint="@color/white"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="Enter Name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameLayout"
        android:layout_below="@+id/namelayout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        >
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="Enter Username"
            />
    </android.support.design.widget.TextInputLayout>

   <ProgressBar
       android:layout_width="wrap_content"
       android:layout_below="@id/usernameLayout"
       android:visibility="invisible"
       android:id="@+id/usernameprogressbar"
       android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/usernameavailable"
    android:layout_width="wrap_content"
    android:layout_below="@id/usernameLayout" android:visibility="invisible"
    android:layout_margin="10dp"
    android:text="UserName Available :)"
    android:layout_height="wrap_content" />

    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:id="@+id/usernamenotavailable"
        android:layout_below="@id/usernameLayout"
        android:layout_margin="10dp"
        android:text="UserName Not  Available :("
        android:layout_height="wrap_content" />




    <TextView
        android:id="@+id/gendertext"
        android:layout_below="@id/usernameprogressbar"
android:paddingTop="40dp"
        android:text="Gender:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_below="@+id/gendertext"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:id="@+id/genderradiogroup"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/male"
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/female"
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/other"
            android:text="Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>





    <ImageView
        android:layout_width="60dp"

        android:id="@+id/done"
        android:src="@drawable/ic_check_circle_white_48dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />







</RelativeLayout>
